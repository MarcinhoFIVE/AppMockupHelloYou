<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textSize="60sp"
        android:text="Hello"
        android:textColor="@color/black"
        android:fontFamily="@font/ralewaylight" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:layout_marginTop="180dp"
        android:text="You"
        android:textColor="@color/black"
        android:fontFamily="@font/ralewayextrabold" />

    <ImageView
        android:layout_gravity="center"
        android:layout_marginBottom="160dp"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:src="@drawable/circulo"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/iconarvore"
        android:layout_marginLeft="200dp"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:src="@drawable/iconcalendar"
        android:layout_marginRight="200dp"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:src="@drawable/iconflor"/>


    <TextView
        tools:text="@tools:sample/lorem/random"
        android:lines="3"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        android:textAlignment="center"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="1"
        android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet."
        android:textColor="@color/black"
        android:fontFamily="@font/ralewaylight" />

    <ImageView
        android:id="@+id/btnSplash"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="45dp"
        android:layout_marginBottom="80dp"
        android:layout_height="45dp"
        android:background="@drawable/circulo"
        android:src="@drawable/ic_baseline_arrow_forward"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>